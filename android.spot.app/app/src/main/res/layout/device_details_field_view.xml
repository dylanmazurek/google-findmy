<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/device_details_field"
    android:padding="14dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="4dp">
    <ImageView
        android:id="@+id/device_details_field_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:tint="?attr/colorOnBackground"
        android:layout_marginStart="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textAppearance="?attr/textAppearanceBodyLarge"
        android:textColor="?attr/colorOnBackground"
        android:id="@+id/device_details_field_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        app:layout_constraintBottom_toTopOf="@+id/device_details_field_value"
        app:layout_constraintStart_toEndOf="@+id/device_details_field_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"/>
    <TextView
        android:textAppearance="?attr/textAppearanceBodyMedium"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:ellipsize="end"
        android:id="@+id/device_details_field_value"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:textAlignment="viewStart"
        android:layout_marginEnd="19dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/device_details_field_button"
        app:layout_constraintStart_toStartOf="@+id/device_details_field_title"
        app:layout_constraintTop_toBottomOf="@+id/device_details_field_title"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/device_details_field_button"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:iconTint="?attr/colorOnSurface"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="?attr/materialIconButtonStyle"/>
    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/device_details_field_progress_indicator"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        app:layout_constraintBottom_toBottomOf="@+id/device_details_field_value"
        app:layout_constraintEnd_toEndOf="@+id/device_details_field_button"
        app:layout_constraintStart_toStartOf="@+id/device_details_field_button"
        app:layout_constraintTop_toTopOf="@+id/device_details_field_title"
        style="@style/Widget.GoogleMaterial3.CircularProgressIndicator.ExtraSmall"/>
</androidx.constraintlayout.widget.ConstraintLayout>
