<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/og_critical_alert_card_view"
    android:focusable="false"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="?attr/ogRedSurfaceColor"
    app:cardCornerRadius="?attr/ogRedAlertCornerRadius"
    app:rippleColor="@color/og_critical_alert_view_ripple"
    app:strokeColor="?attr/ogRedHairlineColor">
    <LinearLayout
        android:orientation="vertical"
        android:paddingLeft="@dimen/og_critical_alert_padding"
        android:paddingTop="@dimen/og_critical_alert_padding"
        android:paddingRight="@dimen/og_critical_alert_padding"
        android:paddingBottom="@dimen/og_critical_alert_bottom_padding_override"
        android:focusable="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="?attr/ogRedAlertTextColor"
            android:id="@+id/og_critical_alert_title"
            android:focusable="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            style="?attr/ogTextViewSubhead2"/>
        <TextView
            android:textColor="?attr/ogRedAlertTextColor"
            android:id="@+id/og_critical_alert_subtitle"
            android:focusable="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/og_critical_alert_space_between_alert_title_and_subtitle"
            android:maxLines="3"
            style="?attr/ogTextViewCaptionVariant"/>
        <com.google.android.material.button.MaterialButton
            android:textColor="?attr/ogRedAlertButtonTextColor"
            android:id="@+id/og_critical_alert_action_button"
            android:paddingLeft="@dimen/og_critical_alert_button_horizontal_padding"
            android:paddingRight="@dimen/og_critical_alert_button_horizontal_padding"
            android:focusable="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/og_critical_alert_space_between_alert_button_and_subtitle"
            app:backgroundTint="?attr/ogRedColorOnSurface"
            style="?attr/ogButton"/>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
