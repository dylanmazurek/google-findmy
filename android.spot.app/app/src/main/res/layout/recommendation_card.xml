<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?android:attr/colorBackground"
    android:layout_width="0dp"
    android:layout_height="wrap_content">
    <com.google.android.material.card.MaterialCardView
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        app:cardBackgroundColor="@color/background_warning"
        style="?attr/materialCardViewFilledStyle">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/recommendation_icon"
                android:layout_width="24dp"
                android:layout_height="0dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:src="@drawable/gs_map_fill1_vd_theme_24"
                android:contentDescription="@string/content_desc_device_image"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:textAppearance="?attr/textAppearanceSubtitle1"
                android:id="@+id/recommnedation_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                android:text="@string/spot_suggest_switch_to_map_view"
                app:layout_constraintBottom_toTopOf="@+id/recommendation_subtitle"
                app:layout_constraintEnd_toStartOf="@+id/recommendation_right_arrow"
                app:layout_constraintStart_toEndOf="@+id/recommendation_icon"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:textAppearance="?attr/textAppearanceBody2"
                android:id="@+id/recommendation_subtitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:text="@string/spot_out_of_range_recommendation"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/recommendation_right_arrow"
                app:layout_constraintStart_toEndOf="@+id/recommendation_icon"
                app:layout_constraintTop_toBottomOf="@+id/recommnedation_title"/>
            <ImageView
                android:id="@+id/recommendation_right_arrow"
                android:layout_width="48dp"
                android:layout_height="0dp"
                android:layout_margin="16dp"
                android:src="@drawable/gs_chevron_right_vd_theme_24"
                android:contentDescription="@string/content_desc_device_image"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</FrameLayout>
