<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="16dp">
    <com.google.android.apps.adm.integrations.spot.DeviceComponentCard
        android:id="@+id/left_component_card"
        android:layout_width="0dp"
        android:layout_height="106dp"
        app:componentName="@string/left_earbud"
        app:icon="@drawable/gs_tws_left_bud_vd_theme_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/case_component_card"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.google.android.apps.adm.integrations.spot.DeviceComponentCard
        android:id="@+id/case_component_card"
        android:layout_width="0dp"
        android:layout_height="106dp"
        android:layout_marginLeft="12dp"
        app:componentName="@string/earbuds_case"
        app:icon="@drawable/gs_tws_case_vd_theme_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/left_component_card"
        app:layout_constraintRight_toLeftOf="@+id/right_component_card"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.google.android.apps.adm.integrations.spot.DeviceComponentCard
        android:id="@+id/right_component_card"
        android:layout_width="0dp"
        android:layout_height="106dp"
        android:layout_marginLeft="12dp"
        app:componentName="@string/right_earbud"
        app:icon="@drawable/gs_tws_right_bud_vd_theme_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/case_component_card"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
